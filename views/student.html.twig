<html>
<head>
    <title>College</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    </head>
</head>
<body>
    <div class="container">
    <h1>{{ student.getName }}</h1>

    {% if courses is not empty %}
        <p>Here are the courses for this student</p>
        <ul>
            {% for course in courses %}
                <li>{{ course.getName }}</li>
            {% endfor %}
        </ul>
    {% endif %}

    <h4>Add a course for this student</h4>

    <form action='/add_courses' method='post'>
        <input id="student_id" name="student_id" type="hidden" value="{{ student.getId }}">
        <label for="course_id">Select a category</label>
        <select id='course_id' name='course_id' type='text'>
          {% for course in all_courses %}
            <option value="{{ course.getId }}"> {{ course.getName }} </option>
          {% endfor %}
        </select>
        <button type='submit'>Add course</button>
    </form>

    <p><a href='/'>Home</a></p>
</div>
</body>
</html>
